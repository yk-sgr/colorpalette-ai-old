// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Plan {
  NONE
  PRO
}

model User {
  id           String    @id
  plan         Plan      @default(NONE)
  subscribedAt DateTime?
  invocations  Int       @default(0)
  createdAt    DateTime  @default(now())
  palettes     Palette[]

  @@map("users")
}

model InvocationMetric {
  id           String   @id @default(cuid())
  time         BigInt
  promptLength Int
  inputLength  Int
  date         DateTime @default(now())

  @@map("invocation_metrics")
}

model Palette {
  id        String   @id @default(cuid())
  input     String
  name      String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  colors    Color[]

  @@index([userId])
  @@map("palettes")
}

enum ColorType {
  LIGHT
  DARK
}

model Color {
  id          String       @id @default(cuid())
  name        String
  foreground  String
  background  String
  description String
  type        ColorType
  usages      ColorUsage[]
  paletteId   String
  palette     Palette      @relation(fields: [paletteId], references: [id])

  @@index([paletteId])
  @@map("colors")
}

model ColorUsage {
  id        String   @id @default(cuid())
  colorId   String
  color     Color    @relation(fields: [colorId], references: [id])
  usage     String
  createdAt DateTime @default(now())

  @@index([colorId])
  @@map("color_usages")
}
